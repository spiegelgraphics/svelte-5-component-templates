{
	"svelteAllowShorthand": false,
	"prettier.tabWidth": 2,
	"useTabs": true,
	"singleQuote": true,
	"arrowParens": "always",
	"singleAttributePerLine": true,
	"bracketSameLine": false,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": [
		"prettier-plugin-svelte"
	],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
